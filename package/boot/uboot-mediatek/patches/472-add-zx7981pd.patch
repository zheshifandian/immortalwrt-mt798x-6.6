+/dts-v1/;
+#include "mt7981.dtsi"
+#include <dt-bindings/gpio/gpio.h>
+#include <dt-bindings/input/input.h>
+
+/ {
+	#address-cells = <1>;
+	#size-cells = <1>;
+	model = "Wireless-Tag ZX7981PD (ubootmod)";
+	compatible = "wirelesstag,zx7981pd-ubootmod", "mediatek,mt7981";
+
+	chosen {
+		stdout-path = &uart0;
+		tick-timer = &timer0;
+	};
+
+	memory@40000000 {
+		device_type = "memory";
+		reg = <0x40000000 0x20000000>;
+	};
+
+	keys {
+		compatible = "gpio-keys";
+
+		reset {
+			label = "reset";
+			gpios = <&gpio 1 GPIO_ACTIVE_LOW>;
+			linux,code = <KEY_RESTART>;
+		};
+
+		wps {
+			label = "wps";
+			gpios = <&gpio 0 GPIO_ACTIVE_LOW>;
+			linux,code = <KEY_WPS_BUTTON>;
+		};
+	};
+
+	leds {
+		compatible = "gpio-leds";
+
+		power {
+			label = "wt:power:blue";
+			gpios = <&gpio 5 GPIO_ACTIVE_HIGH>;
+		};
+
+		wifi {
+			label = "wt:wifi:blue";
+			gpios = <&gpio 4 GPIO_ACTIVE_HIGH>;
+		};
+
+		4g_green {
+			label = "wt:4g:green";
+			gpios = <&gpio 11 GPIO_ACTIVE_HIGH>;
+		};
+
+		4g_blue {
+			label = "wt:4g:blue";
+			gpios = <&gpio 12 GPIO_ACTIVE_HIGH>;
+		};
+
+		4g_yellow {
+			label = "wt:4g:yellow";
+			gpios = <&gpio 10 GPIO_ACTIVE_HIGH>;
+		};
+
+		5g_blue {
+			label = "wt:5g:blue";
+			gpios = <&gpio 9 GPIO_ACTIVE_HIGH>;
+		};
+
+		5g_yellow {
+			label = "wt:5g:yellow";
+			gpios = <&gpio 13 GPIO_ACTIVE_HIGH>;
+		};
+	};
+};
+
+&uart0 {
+	status = "okay";
+};
+
+&eth {
+	status = "okay";
+	mediatek,gmac-id = <0>;
+	phy-mode = "2500base-x";
+	mediatek,switch = "mt7531";
+	reset-gpios = <&gpio 39 GPIO_ACTIVE_HIGH>;
+
+	fixed-link {
+		speed = <2500>;
+		full-duplex;
+		pause;
+	};
+};
+
+&pinctrl {
+	spi_flash_pins: spi0-pins-func-1 {
+		mux {
+			function = "flash";
+			groups = "spi0", "spi0_wp_hold";
+		};
+	};
+};
+
+&spi0 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&spi_flash_pins>;
+	status = "okay";
+	must_tx;
+	enhance_timing;
+	dma_ext;
+	ipm_design;
+	support_quad;
+	tick_dly = <2>;
+	sample_sel = <0>;
+
+	spi_nand@0 {
+		compatible = "spi-nand";
+		reg = <0>;
+		spi-max-frequency = <52000000>;
+
+		partitions {
+			compatible = "fixed-partitions";
+			#address-cells = <1>;
+			#size-cells = <1>;
+
+			partition@0 {
+				label = "bl2";
+				reg = <0x0 0x100000>;
+			};
+
+			partition@100000 {
+				label = "u-boot-env";
+				reg = <0x100000 0x80000>;
+			};
+
+			partition@180000 {
+				label = "Factory";
+				reg = <0x180000 0x200000>;
+				read-only;
+			};
+
+			partition@380000 {
+				label = "fip";
+				reg = <0x380000 0x200000>;
+			};
+
+			partition@580000 {
+				label = "woem";
+				reg = <0x580000 0xa0000>;
+				read-only;
+			};
+
+			partition@620000 {
+				label = "ubi";
+				reg = <0x620000 0x7000000>;
+				compatible = "linux,ubi";
+			};
+
+			partition@7620000 {
+				label = "wtinfo";
+				reg = <0x7620000 0x60000>;
+				read-only;
+			};
+
+			partition@7680000 {
+				label = "nvram";
+				reg = <0x7680000 0x60000>;
+				read-only;
+			};
+		};
+	};
+};
+
+&watchdog {
+	status = "disabled";
+};
